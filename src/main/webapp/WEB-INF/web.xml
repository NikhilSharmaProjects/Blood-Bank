<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Blood Bank Management System</display-name>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Authentication Servlets -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>servlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/admin-login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DonorLoginServlet</servlet-name>
        <servlet-class>servlet.DonorLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonorLoginServlet</servlet-name>
        <url-pattern>/donor-login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DonorSignupServlet</servlet-name>
        <servlet-class>servlet.DonorSignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonorSignupServlet</servlet-name>
        <url-pattern>/donor-signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>servlet.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/user-login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserSignupServlet</servlet-name>
        <servlet-class>servlet.UserSignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserSignupServlet</servlet-name>
        <url-pattern>/user-signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Donor Management Servlets -->
    <servlet>
        <servlet-name>AddDonorServlet</servlet-name>
        <servlet-class>servlet.AddDonorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDonorServlet</servlet-name>
        <url-pattern>/add-donor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewDonorsServlet</servlet-name>
        <servlet-class>servlet.ViewDonorsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewDonorsServlet</servlet-name>
        <url-pattern>/view-donors</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteDonorServlet</servlet-name>
        <servlet-class>servlet.DeleteDonorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteDonorServlet</servlet-name>
        <url-pattern>/delete-donor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchDonorServlet</servlet-name>
        <servlet-class>servlet.SearchDonorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchDonorServlet</servlet-name>
        <url-pattern>/search-donor</url-pattern>
    </servlet-mapping>

    <!-- Blood Stock Management Servlets -->
    <servlet>
        <servlet-name>AddBloodStockServlet</servlet-name>
        <servlet-class>servlet.AddBloodStockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBloodStockServlet</servlet-name>
        <url-pattern>/add-blood-stock</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewBloodStockServlet</servlet-name>
        <servlet-class>servlet.ViewBloodStockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewBloodStockServlet</servlet-name>
        <url-pattern>/view-blood-stock</url-pattern>
    </servlet-mapping>

    <!-- Blood Request/Issue Servlets -->
    <servlet>
        <servlet-name>RequestBloodServlet</servlet-name>
        <servlet-class>servlet.RequestBloodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestBloodServlet</servlet-name>
        <url-pattern>/request-blood</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewBloodIssueServlet</servlet-name>
        <servlet-class>servlet.ViewBloodIssueServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewBloodIssueServlet</servlet-name>
        <url-pattern>/view-blood-issue</url-pattern>
    </servlet-mapping>

    <!-- Dashboard Servlets -->
    <servlet>
        <servlet-name>DashboardStatsServlet</servlet-name>
        <servlet-class>servlet.DashboardStatsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardStatsServlet</servlet-name>
        <url-pattern>/dashboard-stats</url-pattern>
    </servlet-mapping>

</web-app>
